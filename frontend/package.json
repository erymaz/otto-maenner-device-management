{
  "name": "device-management",
  "version": "12.0.0",
  "scripts": {
    "ng": "ng",
    "dev": "ng serve --host=0.0.0.0 --port ${APP_FRONTEND_PORT:-4200} --proxy-config proxy.conf.json",
    "start": "npm run dev",
    "analyze": "webpack-bundle-analyzer dist/device-management/stats.json",
    "watch": "ng build --watch --configuration development",
    "build:develop": "ng build -c develop",
    "build:staging": "npm run build:production",
    "build:production": "ng build",
    "build:production:stats": "ng build --stats-json",
    "shell:build": "docker-compose -f docker-compose.shell.yml build --no-cache",
    "shell": "docker-compose -f docker-compose.shell.yml build && docker-compose -f docker-compose.shell.yml run --rm -u 1000 --service-ports --name device-management app bash || true && echo Stopping environment... && npm run shell:stop",
    "shell:join": "docker exec -it device-management bash || true",
    "shell:stop": "docker-compose -f docker-compose.shell.yml down",
    "test:clean": "rm -rf coverage/ test-reports/",
    "test": "npm run test:clean && KARMA_ADD_COVERAGE_REPORTERS=text-summary ng test",
    "test:ci": "npm run test:clean && KARMA_ADD_COVERAGE_REPORTERS=text,json-summary KARMA_ADD_REPORTERS=junit ng test --watch=false --progress=false && npm run check",
    "check": "npm run check:lint && npm run check:format",
    "check:lint": "ng lint --eslint-config .eslintrc.json",
    "check:format": "prettier --check '{e2e/src,src}/**/*.{ts,js,html,css,scss,sass,less}'",
    "fix": "npm run fix:lint && npm run fix:format",
    "fix:lint": "ng lint --fix",
    "fix:format": "prettier --write '{e2e/src,src}/**/*.{ts,js,html,css,scss,sass,less}'",
    "e2e:clean": "rm -rf test-reports/",
    "e2e": "npm run e2e:clean && ng e2e",
    "postinstall": "echo \"Installing husky...\" ; npx husky install ; npx husky set .husky/pre-commit \"npm run precommit\" || echo \"Error setup husky\"",
    "precommit": "lint-staged"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^13.1.0",
    "@angular/common": "^13.1.0",
    "@angular/compiler": "^13.1.0",
    "@angular/core": "^13.1.0",
    "@angular/forms": "^13.1.0",
    "@angular/localize": "^13.1.0",
    "@angular/platform-browser": "^13.1.0",
    "@angular/platform-browser-dynamic": "^13.1.0",
    "@angular/router": "^13.1.0",
    "@auth0/angular-jwt": "^5.0.2",
    "@ng-bootstrap/ng-bootstrap": "^12.0.0-beta.4",
    "@ng-select/ng-select": "^8.1.1",
    "@ngx-translate/core": "^14.0.0",
    "@ngx-translate/http-loader": "^7.0.0",
    "@popperjs/core": "^2.11.0",
    "angular-svg-icon": "^13.0.0",
    "bootstrap": "^5.1.3",
    "chart.js": "^3.6.2",
    "debug": "^4.3.3",
    "http-errors": "^1.8.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "ngx-toastr": "^14.2.1",
    "ngx-webstorage": "^9.0.0",
    "rxjs": "^7.4.0",
    "tslib": "^2.2.0",
    "url-join": "^4.0.1",
    "uuid": "^8.3.2",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^13.0.0",
    "@angular-devkit/build-angular": "^13.1.1",
    "@angular-eslint/builder": "^13.0.1",
    "@angular-eslint/eslint-plugin": "^13.0.1",
    "@angular-eslint/eslint-plugin-template": "^13.0.1",
    "@angular-eslint/schematics": "^13.0.1",
    "@angular-eslint/template-parser": "^13.0.1",
    "@angular/cli": "^13.1.1",
    "@angular/compiler-cli": "^13.1.0",
    "@types/debug": "^4.1.7",
    "@types/eslint": "^8.2.1",
    "@types/http-errors": "^1.8.1",
    "@types/jasmine": "^3.10.2",
    "@types/karma": "~6.3.1",
    "@types/karma-chrome-launcher": "~3.1.1",
    "@types/karma-coverage": "~2.0.1",
    "@types/karma-jasmine": "~4.0.2",
    "@types/karma-jasmine-html-reporter": "^1.7.0",
    "@types/karma-junit-reporter": "^2.0.1",
    "@types/lodash": "^4.14.178",
    "@types/node": "^16.11.12",
    "@types/prettier": "^2.4.2",
    "@types/url-join": "^4.0.1",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "gts": "^3.1.0",
    "husky": "^7.0.4",
    "jasmine-core": "^3.10.1",
    "jasmine-reporters": "^2.4.0",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "^6.3.9",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "karma-junit-reporter": "^2.0.1",
    "lint-staged": "^12.1.2",
    "moment-locales-webpack-plugin": "^1.2.0",
    "prettier": "^2.5.1",
    "protractor": "~7.0.0",
    "ts-node": "^10.4.0",
    "typescript": "~4.5.4",
    "webpack-bundle-analyzer": "^4.5.0"
  }
}
